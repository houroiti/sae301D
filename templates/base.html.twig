<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Zenlya{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
    <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    {% block stylesheets %}{% endblock %}
</head>
<body>
<header class="header">
    <div class="logo">
        <img src="{{ asset('images/logo.svg') }}" alt="Zenlya">
    </div>
    <div class="header-right">

        <div class="burger-menu" id="burger">
            <span></span>
            <span></span>
            <span></span>
        </div>

        <nav class="nav" role="navigation" aria-label="Navigation principale">
            <a href="{{ path('app_home') }}" class="{% if current_page is defined and current_page == 'home' %}active{% endif %}">Accueil</a>
            <a href="{{ path('app_about') }}" class="{% if current_page is defined and current_page == 'about' %}active{% endif %}">À propos</a>
            <a href="{{ path('app_services') }}" class="{% if current_page is defined and current_page == 'services' %}active{% endif %}">Services</a>
            <a href="{{ path('app_actualites') }}" class="{% if current_page is defined and current_page == 'actualites' %}active{% endif %}">Actualités</a>
            <a href="{{ path('app_reservation') }}" class="{% if current_page is defined and current_page == 'reservation' %}active{% endif %}">Réservation</a>
        </nav>
        <div class="menu-backdrop" id="menu-backdrop"></div>



    </div>
</header>

{% block body %}{% endblock %}

{% block javascripts %}


    <script>
        const burger = document.getElementById('burger');
        const nav = document.querySelector('.nav');
        const backdrop = document.getElementById('menu-backdrop');

        burger.addEventListener('click', () => {
            burger.classList.toggle('active');
            nav.classList.toggle('open');
            backdrop.classList.toggle('active');
        });

        backdrop.addEventListener('click', () => {
            burger.classList.remove('active');
            nav.classList.remove('open');
            backdrop.classList.remove('active');
        });


    </script>
{% endblock %}
</body>
</html>
